{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Base",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "ESNext",
        "noImplicitAny": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "sourceMap": false,
        "strict": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "typeRoots": [
            "node_modules/@types",
            "./types"
        ]
    },
    "ts-node": {
        "experimentalSpecifierResolution": "node"
    },
    "exclude": ["node_modules/**", "./test/**", "./scripts/**", "**/*.test.ts", "./dist/**"]
}
